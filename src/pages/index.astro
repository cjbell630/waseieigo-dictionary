---
import Layout from '../layouts/Layout.astro';
import SearchResultCard from "../components/SearchResultCard.astro";
import Logo from "../components/Logo.astro";
import SearchBar from "../components/SearchBar.astro";
import DetailsPane from "../components/DetailsPane.astro";
import SearchResultsPane from "../components/SearchResultsPane.astro";
---

<Layout>
    <div class="main-content">
        <Logo/>
        <div class="search-bar-row">
            <span style="flex:4"><SearchBar/></span>
            <span style="flex:6"></span>
        </div>
        <div class="dict-pane">
            <div style="flex:4">
                <SearchResultsPane></SearchResultsPane>
            </div>
            <div style="flex:6">
                <DetailsPane></DetailsPane>
            </div>
        </div>
    </div>
</Layout>

<style>
    .main-content {
        display: flex;
        flex-direction: column;
    }

    .search-bar-row {
        display: flex;
        flex-direction: row;
    }

    .dict-pane {
        display: flex;
        flex-direction: row;
    }
</style>
