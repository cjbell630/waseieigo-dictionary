---
import Badge from "./Badge.astro";
const {tags} = Astro.props;
const {class: className, ...rest} = Astro.props;
---


<div class:list={["badges", className]} {...rest}>
    {tags.map(tag => (
            <Badge tag={tag}/>
    ))}
</div>

<style>
    .badges {
        display: flex;
        flex-wrap: wrap;
        align-self: flex-end;
        justify-content: flex-end;
        margin-left: 0%;
    }


    /* PORTRAIT ONLY */
    @media (orientation: portrait) {
        .badges {
            flex: auto;
        }
    }
</style>