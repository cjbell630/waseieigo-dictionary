---
import Card from "./Card.astro";
import Nijuumaru from "./symbols/Nijuumaru.astro";
import Batsu from "./symbols/Batsu.astro";
import Term from "./Term.astro";
import Badge from "./Badge.astro";
import SearchResultCard from "./SearchResultCard.astro";
import DetailsCard from "./DetailsCard.astro";
import dictionary from "../../public/data/dictionary.json"
---
<!--TODO add placeholder when none selected -->
<Card class="placeholder-results-card selected">
    Click a result to show details
</Card>
{
    Object.entries(dictionary).map(
        ([word, entry]) =>
            (
            <DetailsCard word={word} entry={entry}/>)
        )
    }

<style>
    .selected {
        display: flex;
        visibility: visible;
    }
</style>