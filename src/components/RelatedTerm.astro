---
import Card from "./Card.astro";
import Term from "./Term.astro";
const {word, targetId} = Astro.props
---

<related-term data-target={targetId}>
    <Card isClickable>
        <Term evaluation="neutral">{word}</Term>
    </Card>
</related-term>

<style>
    h2 {
        font-size: 1.25em;
    }

    .card {
        padding: 0.75em;
        margin-top: 0em;
    }
</style>

<script>

    import {navigateToCard} from "../scripts/navigation.js";

    class RelatedTerm extends HTMLElement {
        connectedCallback() {
            this.addEventListener("click", (e) => {
                console.log(`related word: ${this.dataset.target}`)
                navigateToCard(this.dataset.target);
            });
        }
    }

    customElements.define("related-term", RelatedTerm);
</script>