---
const {text} = Astro.props;
---

<div class="ui-button">
    <!-- ICON -->
    <slot/>
    <h3>{text}</h3>
</div>

<style>
    .ui-button {
        display: flex;
        flex-direction: row;
        border-radius: 20px;
        background-color: rgba(255, 255, 255, 0.18);
        width: fit-content;
        padding: 1.5%;
        color: rgba(255, 250, 240, 0.6);
    }

    h3 {
        margin: 0;
    }
</style>