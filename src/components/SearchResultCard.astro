---
import Badge from "./Badge.astro";
import Card from "./Card.astro";
import Term from "./Term.astro";
import BadgeSection from "./BadgeSection.astro";
import {processData} from "../scripts/processData";
const {word, entry} = Astro.props;
const {
    aliasString,
    numDistinctTerms,
    allTerms,
    generalTerm,
    originTerm,
    originEval,
    correctionNeeded,
    correction,
    correctionEval
} = processData(word, entry);
---

<!-- TODO make search-result take the hide properties -->
<!-- TODO update url on click (populate stack) -->
<search-result data-word={word} class="search-result" id={word}>
    <Card isClickable>
        <h1 class="katakana"><b>{word}</b><span class="alias-string">{aliasString}</span></h1>
        <div class="info">
            <div class="english">
                <Term evaluation={originEval}>
                    {originTerm}
                </Term>
                {
                    correctionNeeded ? (
                            <Term evaluation={correctionEval}>
                                {correction}
                            </Term>
                    ) : (
                            <p>{numDistinctTerms - 1} more</p><!-- TODO make look nice -->
                    )
                }
            </div>
            <BadgeSection tags={entry.tags}/>
        </div>
    </Card>
</search-result>

<style>
    .alias-string {
        color: darkgrey;
    }

    .katakana {
        margin-bottom: 0.5rem;
        margin-top: 0.5rem;
        color: floralwhite;
    }

    .info {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    .search-result {
        display: flex;
    }

    .search-result .card {
        width: 100%;
        margin-top: 0;
    }
</style>

